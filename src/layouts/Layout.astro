---
interface Props {
	title: string;
}

const { title } = Astro.props;

// Supports weights 100-900
import '@fontsource-variable/dm-sans/wght.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Batabit te ayuda a navegar entre los diferentes precios y tendencias."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="robots" content="LayoutPage, follow" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html::-webkit-scrollbar {
		overflow: hidden;
		position: relative;
		width: 100%;
		height: 100%;
	}
	body {
		font-family: 'DM Sans Variable', sans-serif;
	}
</style>
