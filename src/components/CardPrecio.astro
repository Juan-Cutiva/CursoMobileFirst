---
// Supports weights 100-900
import '@fontsource-variable/inter';
---

<div class="flex h-full flex-col items-center">
	<div
		class="flex h-[21rem] w-[60%] flex-col items-center justify-center rounded-lg bg-white text-center drop-shadow-xl"
	>
		<p class="text-lg font-medium">Pago Anual</p>
		<p id="two" class="mt-3 text-7xl font-bold">
			<span class="relative top-2 align-text-top text-lg text-[#363636]">$</span>99
		</p>
		<p class="mt-3 text-lg font-medium text-[#757575]">*Ahorra $129 comprando al plan mensual.</p>
		<a
			href="#"
			class="mt-5 flex h-[3.5rem] w-[80%] items-center justify-center rounded border-[3px] border-[#F7931A] bg-[#FAF8F7] text-lg font-bold text-[#201E1C]"
			>Escoger este <img src="/arrowRsvg.svg" alt="Arrow R" class="pl-2" /></a
		>
	</div>
	<div
		class="relative top-[-22.2rem] flex h-[2.5rem] w-[7.2rem] sm:h-[3rem] sm:w-[8rem] text-center items-center justify-center rounded-lg bg-[#F7931A] text-[0.875rem] sm:text-[1rem] font-bold leading-[1rem] text-white"
	>
		<p id="one">Recomendado</p>
	</div>
</div>

<style>
	#one,
	#two {
		font-family: 'Inter Variable', sans-serif;
	}
</style>
